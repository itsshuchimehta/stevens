            <a class="collapse-item" href="/admin/AddBlog">Blog</a>
            <a class="collapse-item" href="/admin/AddSubscription">Subscriptions</a>
          </div>
        </div>
      </li>
      {{/if}}

      <!-- Nav Item - Pages Collapse Menu -->
      <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true"
          aria-controls="collapseTwo">
          <i class="fas fa-fw fa-history"></i>
          <span>My Orders</span>
        </a>
        <div id="collapseTwo" class="collapse" data-parent="#accordionSidebar">
          <div class="bg-white py-2 collapse-inner rounded">
            <a class="collapse-item" href="/subscriptions/history">Subscription History</a>
          </div>
        </div>
      </li>

      <!-- Divider -->
      <!-- <hr class="sidebar-divider my-0">  -->

      <!-- Nav Item - Buy Subscriptions -->
      <li class="nav-item">
        <a class="nav-link" href="/subscriptions">
          <i class="fas fa-fw fa-tags"></i>
          <span>Buy Subscriptions</span></a>
      </li>
      <!-- Divider -->
      <!-- <hr class="sidebar-divider my-0">  -->

      <!-- Nav Item - Products -->
      <li class="nav-item">
        <a class="nav-link" href="/products">
          <i class="fas fa-fw fa-shopping-bag"></i>
          <span>Products</span></a>
      </li>
      <!-- Divider -->
      <!--  <hr class="sidebar-divider my-0"> -->

      <!-- Nav Item - blogs -->
      <li class="nav-item">
        <a class="nav-link" href="/blogs">
          <i class="fas fa-fw fa-th"></i>
          <span>Blogs</span></a>
      </li>
      <!-- Divider -->
      <!--  <hr class="sidebar-divider my-0"> -->

      <!-- Nav Item - Dashboard -->
      <li class="nav-item">
        <a class="nav-link" href="/cart">
          <i class="fas fa-fw fa-shopping-cart"></i>
          <span>My Cart</span></a>
      </li>








      <!-- Divider -->
