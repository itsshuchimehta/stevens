<body>
  {{#if user_header}}
  <header class="header-area header-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="/" class="logo">RockBottom</a>
            <!-- ***** Logo End ***** -->
            <!-- ***** Menu Start ***** -->
            <ul class="nav">
              <li class="scroll-to-section"><a href="/" class="active">Home</a></li>
              <li class="scroll-to-section"><a href="/subscriptions">Buy Subscriptions</a></li>
              <li class="scroll-to-section"><a href="/products">Products</a></li>
              <li class="scroll-to-section"><a href="/blogs">Blogs</a></li>
              <li>
                <a href="/cart">My Cart</a>
              </li>
              {{#if NotloggedIn}}
              <li class="main-button"><a href="/login">Sign Up / Login</a></li>
              {{/if}}

              {{#if loggedIn}}
              <li>
                <a href="/dashboard">Hello, {{UserFullname}}</a>
              </li>
              {{/if}}

            </ul>
            <a class="menu-trigger">
              <span>Menu</span>
            </a>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>
  {{/if}}
  {{#if dashHeader}}
  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

      <!-- Sidebar - Brand -->

      <!-- <div class="sidebar-brand-text mx-3"> -->
