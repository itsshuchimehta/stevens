<section class="bg-image" style="
    background-image: url('https://mdbcdn.b-cdn.net/img/Photos/Others/images/76.webp')
  ">
    <div class="container">
        <form method="POST" action="/products/searchByName">
            <div class="mt-5">
                <label for="search" class="form-label mt-5">Search product</label>
                <input type="search" class="form-control" id="search" name="search">
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </div>
        </form>

        <div class="row mt-5">
            {{#each products}}
            <div class="col-sm-12 col-md-6 col-xl-4 mt-5">
                <div class="card h-100 text-center" style="width: 18rem;">
                    <!-- <img src="/public/images/product/{{this.product_img}}" class="card-img-top h-100"
                        alt="{{this.category}}" /> -->
                    <img src="/public/images/product/{{this.product_img}}  " class="card-img-top h-100"
                        alt="{{this.category}}" />
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}.${{this.price}} only</h5>
                        <a href="/products/{{this._id}}" class="btn btn-primary">Buy Now</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>