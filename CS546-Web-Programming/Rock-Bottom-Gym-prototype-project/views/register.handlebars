<section class="vh-120 bg-image" style="
    background-image: url('https://mdbcdn.b-cdn.net/img/Photos/Others/images/76.webp')
  ">

  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-12 col-lg-9 col-xl-9">

          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <div class="mb-md-3 mt-md-2 pb-3">
                <form id="registerForm" name="registerForm" action="/register" method="post">
                  <h2 class="fw-bold mb-2 text-uppercase">Create an account</h2>
                  <p class="text-white-50 mb-5">Please Fill up this Form to register</p>
                  {{#if AlreadyExist}}
                  <div class="error"> Account already Exist with this Email Address!</div>
                  {{/if}}

                  {{#if BadInput}}
                  <div class="error"> {{error}}</div>
                  {{/if}}
                  <div class="row">
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="firstname">First Name</label>
                      <input type="text" id="firstname" name="firstname" class="form-control form-control-lg" />
                      <div class="error"></div>
                    </div>
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="lastname">Last Name</label>
                      <input type="text" id="lastname" name="lastname" class="form-control form-control-lg" />
                      <div class="error"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="gender">Gender</label>
                      <select id="gender" name="gender" class="form-select form-control form-control-lg form-select-lg">
                        <option value="">Select your Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                        <option value="Do not want to specify">Do not want to specify</option>
                      </select>
                    </div>
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="dob">Date of Birth</label>
                      <input type="date" id="dob" name="dob" class="form-control form-control-lg" />
                      <div id="AgeErr"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="address">Address</label>
                      <input type="text" id="address" name="address" class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="zipcode">Zipcode</label>
                      <input type="text" id="zipcode" name="zipcode" class="form-control form-control-lg" />
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="cell">Cell No.</label>
                      <input type="text" id="cell" name="cell" class="form-control form-control-lg" />

                    </div>

                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="email">Email</label>
                      <input type="email" id="email" name="email" class="form-control form-control-lg emailID" />

                    </div>
                  </div>
                  <div class="row">
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="password">Password</label>
                      <input type="password" id="password" name="password" class="form-control form-control-lg" />
                    </div>
                    <div class="form-outline form-white mb-4 col-6">
                      <label class="form-label" for="cpassword">Confirm Password</label>
                      <input type="password" id="cpassword" name="cpassword" class="form-control form-control-lg" />
                    </div>
                  </div>
                  <button class="btn btn-outline-light btn-lg px-5" type="submit" id="register"
                    name="register">Register</button>
                </form>
              </div>
              <div>
                {{! <p class="mb-0">Don't have an account?
                  <a href="register" class="text-white-50 fw-bold">Sign Up</a>
                </p> }}
                <p class="text-center text-muted mt-5 mb-0">Have already an
                  account?
                  <a href="login" class="text-white-50 fw-bold"><u>Login here</u></a>
                </p>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

</section>