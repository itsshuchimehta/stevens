{{#if peopleResult}}
<h2 class="FB-h2">{{peopleResult.firstName}} {{peopleResult.lastName}}</h2>
<dl class="dl-inline">
    <dt>ID</dt>
    <dd>{{peopleResult.id}}</dd>
    <dt>First Name</dt>
    <dd>{{peopleResult.firstName}}</dd>
    <dt>Last Name</dt>
    <dd>{{peopleResult.lastName}}</dd>
    <dt>Address</dt>
    <dd>{{peopleResult.address}}</dd>
    <dt>Zip Code</dt>
    <dd>{{peopleResult.zip}}</dd>
    <dt>Phone</dt>
    <dd>{{peopleResult.phone}}</dd>
    <dt>Social Security Number</dt>
    <dd>{{peopleResult.ssn}}</dd>

</dl>

{{/if}}